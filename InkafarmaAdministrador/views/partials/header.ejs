<header class="bg-white shadow-md rounded-lg px-4 py-2">
  <div class="flex flex-col lg:flex-row items-center lg:justify-between gap-4">

    <!-- Logo con ancho fijo -->
    <div class="w-full lg:w-1/3 text-center lg:text-left flex-shrink-0" >
      <div class="w-full lg:w-1/3 text-center lg:text-left flex-shrink-0">
        <img src="/img/logo_inkafarma2.png" alt="Logo" class="h-14 mx-auto lg:mx-0">
      </div>
    </div>

    <!-- Título y controles en fila desde md, ocupando el resto -->
    <div class="w-full flex flex-col md:flex-row md:items-center justify-between gap-4">

      <!-- Título -->
      <div class="w-full md:w-1/2 text-center md:text-left">
        <h1 class="text-2xl font-bold">PANEL DE ADMINISTRACIÓN INKAFARMA</h1>
      </div>

      <!-- Controles -->
      <div class="w-full md:w-1/2 flex items-center justify-center md:justify-end gap-4 text-gray-600 text-lg font-sans">

        <!-- Buscador -->
        <div class="flex items-center border rounded overflow-hidden">
          <span class="px-3 bg-gray-100">
            <i class="fa-solid fa-magnifying-glass"></i>
          </span>
          <input 
            type="search" 
            class="px-2 py-1 focus:outline-none focus:shadow-none focus:border-gray-300" 
            placeholder="Buscar...">
        </div>

        <!-- Notificación -->
        <a href="#" class="hover:text-gray-800">
          <i class="fa-solid fa-bell"></i>
        </a>

        <!-- Usuario -->
        <div class="flex items-center gap-2">
          <i class="fa-solid fa-user"></i>
          <span>Admin</span>
        </div>
      </div>

    </div>
  </div>
</header>