<header class="bg-white shadow px-4 py-3 flex flex-wrap items-center justify-between">
  <!-- Botón: Toggle Sidebar -->
  <button id="toggleSidebarTop" class="text-gray-500 hover:text-gray-700">
    <i class="fa-solid fa-bars"></i>
  </button>

  <!-- Título -->
  <h1 class="text-xl font-bold text-center lg:text-left w-full lg:w-auto">Panel de administración</h1>

  <!-- Controles -->
  <div class="flex flex-wrap items-center justify-end gap-4 w-full lg:w-auto mt-2 lg:mt-0">
    <!-- Buscador -->
    <div class="flex items-center border rounded overflow-hidden w-full sm:w-auto">
      <span class="px-3 bg-gray-100">
        <i class="fa-solid fa-magnifying-glass"></i>
      </span>
      <input type="search" class="px-2 py-1 w-full focus:outline-none" placeholder="Buscar...">
    </div>

    <!-- Notificación -->
    <i class="fa-solid fa-bell"></i>

    <!-- Usuario -->
    <div class="flex items-center gap-2">
      <i class="fa-solid fa-user"></i>
      <span>Admin</span>
    </div>
  </div>
</header>