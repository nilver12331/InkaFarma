<!--Links-->
<header class="shadow px-4 py-3 flex flex-wrap items-center justify-between bg-slate-800 text-slate-100 text-white">
  <!-- Botón: Toggle Sidebar -->
  <button id="toggleSidebarTop" class="hover:text-gray-500">
    <i class="fa-solid fa-bars"></i>
  </button>

  <!-- Título -->
  <h1 class="font-bold text-center lg:text-left w-full lg:w-auto uppercase text-3xl">Panel de administración</h1>

  <!-- Controles -->
  <div class="flex flex-wrap items-center justify-end gap-4 w-full lg:w-auto mt-2 lg:mt-0">
    <!-- Buscador -->
    <div
      class="flex items-center gap-2 px-3 py-2 bg-white rounded shadow-sm focus-within:ring-2 focus-within:ring-blue-500">
      <svg class="h-4 w-4 text-gray-400" xmlns="http://www.w3.org/2000/svg" fill="none" viewBox="0 0 24 24"
        stroke="currentColor">
        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2"
          d="M21 21l-4.35-4.35M10.5 17a6.5 6.5 0 100-13 6.5 6.5 0 000 13z" />
      </svg>
      <input type="search" placeholder="Buscar"
        class="w-full bg-transparent text-gray-700 placeholder-gray-400 focus:outline-none border-none focus:ring-0 focus:border-0" />
    </div>
    <!-- Notificación -->
    <i class="fa-solid fa-bell"></i>

    <!-- Usuario -->
    <div class="flex items-center gap-2">
      <i class="fa-solid fa-user"></i>
      <span>Admin</span>
    </div>
  </div>
</header>