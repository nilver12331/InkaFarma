<div class="px-2">
    <div class="mb-6">
        <h1 class="font-bold text-3xl uppercase text-slate-800">Administrador Zona Referencias</h1>
        <p class="py-2 text-slate-500 text-lg">Administra tus zonas de referencia</p>
    </div>
    <div>
        <div class="py-4 flex justify-end">
            <button class="btn py-2 border-0 bg-cyan-600 hover:bg-cyan-700 text-slate-100" id="btnAbrirModalAgregar"><i
                    class="fas fa-plus mr-2"></i> Agregar
            </button>
        </div>
        <div id="divTablaZona" class="overflow-hidden rounded-lg shadow p-4 tailwind-table bg-slate-50">
        </div>
    </div>
    <!--Modal para guardar-->
    <div id="modalNuevaZona"
    class="fixed inset-0 z-50 hidden bg-black/40 flex items-center justify-center overflow-y-auto">
    <div class="bg-white rounded-lg w-full max-w-3xl shadow-lg p-6">
        <h2 class="text-xl font-semibold mb-4 text-inka">Nueva Zona de Cobertura</h2>
        <form id="formAgregarZona" class="grid grid-cols-1 md:grid-cols-2 gap-4">
            <input id="idZona" name="idZona" type="hidden"/>
            <div>
                <label for="nombreZona" class="block text-sm font-medium text-gray-700">Zona</label>
                <input id="nombreZona" name="nombreZona" type="text" required
                    class="mt-1 w-full rounded border border-gray-300 focus:ring-2 focus:ring-green-500 
                           focus:border-green-500 px-3 py-2" />
            </div>

            <div>
                <label for="distritoZona" class="block text-sm font-medium text-gray-700">Distrito</label>
                <input id="distritoZona" name="distritoZona" type="text" required
                    class="mt-1 w-full rounded border border-gray-300 focus:ring-2 focus:ring-green-500 
                           focus:border-green-500 px-3 py-2" />
            </div>

            <div>
                <label for="centroLatitud" class="block text-sm font-medium text-gray-700">Centro Latitud</label>
                <input id="centroLatitud" name="centroLatitud" type="number" step="0.0001" required
                    class="mt-1 w-full rounded border border-gray-300 focus:ring-2 focus:ring-green-500 
                           focus:border-green-500 px-3 py-2" />
            </div>

            <div>
                <label for="centroLongitud" class="block text-sm font-medium text-gray-700">Centro Longitud</label>
                <input id="centroLongitud" name="centroLongitud" type="number" step="0.0001" required
                    class="mt-1 w-full rounded border border-gray-300 focus:ring-2 focus:ring-green-500 
                           focus:border-green-500 px-3 py-2" />
            </div>

            <div>
                <label for="radioKm" class="block text-sm font-medium text-gray-700">Radio (Km)</label>
                <input id="radioKm" name="radioKm" type="number" step="0.1" required
                    class="mt-1 w-full rounded border border-gray-300 focus:ring-2 focus:ring-green-500 
                           focus:border-green-500 px-3 py-2" />
            </div>

            <div>
                <label for="costoEnvio" class="block text-sm font-medium text-gray-700">Costo de Envío (S/.)</label>
                <input id="costoEnvio" name="costoEnvio" type="number" step="0.1" required
                    class="mt-1 w-full rounded border border-gray-300 focus:ring-2 focus:ring-green-500 
                           focus:border-green-500 px-3 py-2" />
            </div>

            <div>
                <label for="tiempoEntrega" class="block text-sm font-medium text-gray-700">Tiempo Estimado (min)</label>
                <input id="tiempoEntrega" name="tiempoEntrega" type="number" required
                    class="mt-1 w-full rounded border border-gray-300 focus:ring-2 focus:ring-green-500 
                           focus:border-green-500 px-3 py-2" />
            </div>


            <!-- Botones -->
            <div class="col-span-1 md:col-span-2 flex justify-end gap-3 pt-4">
                <button type="button" id="cancelarZona" class="btn btn-outline btn-neutral">Cancelar</button>
                <button type="submit" class="btn btn-success">Guardar</button>
            </div>
        </form>
    </div>
    </div>
    <div id="modalEditarCliente"
        class="fixed inset-0 z-50 hidden bg-black/40 flex items-center justify-center overflow-y-auto">
        <div class="bg-white rounded-lg w-full max-w-3xl shadow-lg p-6">
            <h2 class="text-xl font-semibold mb-4 text-inka">Editar Cliente</h2>
            <form id="formEditarCliente" class="grid grid-cols-1 md:grid-cols-2 gap-4">
                <input type="hidden" id="idClienteEditar" name="idClienteEditar" />

                <div>
                    <label for="nombreEditar" class="block text-sm font-medium text-gray-700">Nombre</label>
                    <input id="nombreEditar" name="nombreEditar" type="text" required
                        class="mt-1 w-full rounded border border-gray-300 focus:ring-2 focus:ring-green-500 focus:border-green-500 px-3 py-2" />
                </div>
                <div>
                    <label for="apellidoPaternoEditar" class="block text-sm font-medium text-gray-700">Apellido
                        Paterno</label>
                    <input id="apellidoPaternoEditar" name="apellidoPaternoEditar" type="text" required
                        class="mt-1 w-full rounded border border-gray-300 focus:ring-2 focus:ring-green-500 focus:border-green-500 px-3 py-2" />
                </div>
                <div>
                    <label for="apellidoMaternoEditar" class="block text-sm font-medium text-gray-700">Apellido
                        Materno</label>
                    <input id="apellidoMaternoEditar" name="apellidoMaternoEditar" type="text" required
                        class="mt-1 w-full rounded border border-gray-300 focus:ring-2 focus:ring-green-500 focus:border-green-500 px-3 py-2" />
                </div>
                <div>
                    <label for="dniEditar" class="block text-sm font-medium text-gray-700">DNI</label>
                    <input id="dniEditar" name="dniEditar" type="text" required
                        class="mt-1 w-full rounded border border-gray-300 focus:ring-2 focus:ring-green-500 focus:border-green-500 px-3 py-2" />
                </div>
                <div>
                    <label for="generoEditar" class="block text-sm font-medium text-gray-700">Género</label>
                    <select id="generoEditar" name="generoEditar" required
                        class="mt-1 w-full rounded border border-gray-300 focus:ring-2 focus:ring-green-500 focus:border-green-500 px-3 py-2">
                        <option value="">Seleccione...</option>
                        <option value="Masculino">Masculino</option>
                        <option value="Femenino">Femenino</option>
                    </select>
                </div>
                <div>
                    <label for="correoEditar" class="block text-sm font-medium text-gray-700">Correo</label>
                    <input id="correoEditar" name="correoEditar" type="email" required
                        class="mt-1 w-full rounded border border-gray-300 focus:ring-2 focus:ring-green-500 focus:border-green-500 px-3 py-2" />
                </div>
                <div>
                    <label for="telefonoEditar" class="block text-sm font-medium text-gray-700">Teléfono</label>
                    <input id="telefonoEditar" name="telefonoEditar" type="text" required
                        class="mt-1 w-full rounded border border-gray-300 focus:ring-2 focus:ring-green-500 focus:border-green-500 px-3 py-2" />
                </div>

                <!-- Botones -->
                <div class="col-span-1 md:col-span-2 flex justify-end gap-3 pt-4">
                    <button type="button" id="cancelarEditarCliente"
                        class="btn btn-outline btn-neutral">Cancelar</button>
                    <button type="submit" class="btn btn-success" id="btnGuardarCambios">Guardar Cambios</button>
                </div>
            </form>
        </div>
    </div>
     <!-- Modal de confirmación -->
    <div id="modalConfirmacion" class="fixed inset-0 z-50 bg-black/40 hidden flex items-center justify-center">
        <div class="bg-white p-6 rounded-lg w-full max-w-md shadow-lg animate-fadeIn">
            <h2 class="text-lg font-semibold mb-4">¿Estás seguro?</h2>
            <p class="text-sm text-gray-600 mb-6">Esta acción eliminara la categoría seleccionada.</p>
            <div class="flex justify-end gap-3">
               
                <button id="cancelarModal" class="btn  btn btn-outline btn-neutral">Cancelar</button>
                <button id="btnConfirmarEliminar" class="btn bg-rose-500 hover:bg-rose-600 text-slate-100">Sí,
                    desactivar</button>
            </div>
        </div>
    </div>
</div>
<!--Toast-->
<div id="toast"
    class="hidden fixed bottom-5 right-5 bg-emerald-500 hover:bg-emerald-600 text-white px-8 py-2 rounded shadow z-50">
</div>

